diff --git a/scripts/statistics/base/ols.m b/scripts/statistics/base/ols.m
--- a/scripts/statistics/base/ols.m
+++ b/scripts/statistics/base/ols.m
@@ -104,22 +104,22 @@ function [beta, sigma, r] = ols (y, x)
     x = double (x);
   endif
   if (isinteger (y))
     y = double (y);
   endif
 
   ## Start of algorithm
   z = x' * x;
-  rnk = rank (z);
+  [u, p] = chol (z);
 
-  if (rnk == nc)
-    beta = inv (z) * x' * y;
+  if (p)
+    beta = pinv (x) * y;
   else
-    beta = pinv (x) * y;
+    beta = u \ (u' \ x' * y);
   endif
 
   if (isargout (2) || isargout (3))
     r = y - x * beta;
   endif
   if (isargout (2))
     sigma = r' * r / (nr - rnk);
   endif
