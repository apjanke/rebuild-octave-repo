+
+  if (nargin == 1)
+    delimiter = " ";
+  elseif (nargin < 1 || nargin > 2)
+    print_usage ();
+  elseif (! (iscellstr (cstr) && (ischar (delimiter) || iscellstr (delimiter))))
+    print_usage ();
+  endif
+
+  if (numel (cstr) == 1)
+    rval = cstr{1};
+    return
+  endif
+
+  if (ischar (delimiter))
+    delimiter = {delimiter};
+  end
+ 
+  num = numel (cstr); 
