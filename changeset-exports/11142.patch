+## -*- texinfo -*-
+## @deftypefn {Function File} {} is_valid_file_id (@var{fid})
+## Return true if @var{fid} refers to an open file.
+## @seealso{fopen}
+## @end deftypefn
+
+function retval = is_valid_file_id (fid)
+
+  retval = false;
+
+  if (nargin == 1)
+    try
+      [file, mode, arch] = fopen (fid);
+      retval = ! isempty (file);
+    end_try_catch
+  else
+    print_usage ();
+  endif
+
+endfunction
