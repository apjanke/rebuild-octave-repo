+    usage("condest: Incorrect arguments.");
+  endif
+
+  default_t = 5;
+
+  if (ismatrix (varargin{1}))
+    n = size (varargin{1}, 1);
+    if (n != size (varargin{1}, 2))
+      error ("condest: matrix must be square.");
+    endif
