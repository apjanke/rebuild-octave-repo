+    AC_CHECK_PROGS(LRELEASE, [lrelease])
+    if test -n "$MOC" && test -n "$UIC" && test -n "$RCC" && test -n "$LRELEASE"; then
       AC_DEFINE(HAVE_QT, 1, 
-        [Define to 1 if Qt is available (libraries, developer header files, utility programs (moc, uic, and rcc))])
