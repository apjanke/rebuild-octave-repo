-      retval(1) = res;
+      retval(1) = ok;
       // Return empty string if no error occured.
-      retval(2) = res ? "" : curl.lasterror ();
+      retval(2) = ok ? "" : curl.lasterror ();
     }
 
-  if (nargout < 2 && !res)
+  if (nargout < 2 && ! ok)
     error ("urlread: curl: %s", curl.lasterror().c_str());
 
 #else
