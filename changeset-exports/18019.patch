+  { }
+
+  void register_current_thread (void)
+  {
+    my_thread = pthread_self ();
+    initialized = true;
+  }
+
+  void interrupt (void)
+  {
+    if (initialized)
+      pthread_kill (my_thread, SIGINT);
+  }
